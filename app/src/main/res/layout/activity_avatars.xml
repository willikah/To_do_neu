<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.apps.wk.to_do.Avatars">

        <ImageButton
            android:id="@+id/av_cnorris_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="41dp"
            android:background="@null"
            android:onClick="select_avatar"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:src="@mipmap/c_norris"
            android:tag="c_norris" />

        <ImageButton
            android:id="@+id/av_picard_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/av_worf_id"
            android:layout_alignStart="@+id/av_worf_id"
            android:background="@null"
            android:onClick="select_avatar"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:src="@mipmap/picard"
            android:tag="picard" />

        <ImageButton
            android:id="@+id/av_hitler_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="32dp"
            android:background="@null"
            android:onClick="select_avatar"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:src="@mipmap/hitler"
            android:tag="hitler" />

        <ImageButton
            android:id="@+id/av_worf_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:onClick="select_avatar"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:src="@mipmap/worf"
            android:tag="worf" />

        <ImageButton
            android:id="@+id/av_kirk_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="31dp"
            android:background="@null"
            android:onClick="select_avatar"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:src="@mipmap/kirk"
            android:tag="kirk" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/av_cnorris_id"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:text="Chuck Norris" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/av_picard_id"
            android:layout_alignRight="@+id/av_picard_id"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:text="Cpt. Picard" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/av_hitler_id"
            android:text="Adolf Hitler" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignTop="@+id/textView3"
            android:text="Cmd. Worf" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/av_kirk_id"
            android:text="Cpt. Kirk" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="@string/Avatar_top"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </RelativeLayout>

</ScrollView>
